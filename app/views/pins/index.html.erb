

<%= link_to "Nieuw pin", new_pin_path() %>

<% @pins.each do |pin| %>
	<%= content_tag "div", class: "pin", data: {minors: pin.minors.ids, competences: pin.competences.ids} do %>
		<%= pin.title %>
		<% if pin.image %>
			<%= image_tag pin.image %>
		<% else %>
			<img src="https://api.thumbalizr.com/?url=<%= pin.link %>&width=250"/>
		<% end %>
	<% end %>
<% end %>

